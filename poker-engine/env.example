# Environment Configuration Template
# Copy this file to .env and fill in your values

# ================================
# SERVER CONFIGURATION
# ================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# ================================
# DATABASE
# ================================
# Main database connection (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/poker_engine

# Supabase (if using Supabase instead of raw PostgreSQL)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ================================
# REDIS (Optional - for sessions/caching)
# ================================
REDIS_URL=redis://localhost:6379

# ================================
# AUTHENTICATION & SECURITY
# ================================
# Generate with: openssl rand -base64 48
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=30d

# Generate with: openssl rand -base64 48
SERVER_SECRET=your-server-secret-for-rng-seeding-at-least-32-chars

# Password hashing rounds (12 is recommended)
BCRYPT_ROUNDS=12

# ================================
# GAME CONFIGURATION
# ================================
DEFAULT_STARTING_CHIPS=1000
MAX_GAMES_PER_USER=5

# ================================
# EXTERNAL APIS
# ================================
# YouTube Data API v3 (for entropy generation)
YOUTUBE_API_KEY=your-youtube-api-key

# Random.org API (fallback entropy source)
RANDOM_ORG_API_KEY=your-random-org-api-key

# ================================
# SECURITY & RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# CORS CONFIGURATION
# ================================
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# ================================
# LOGGING & MONITORING
# ================================
LOG_LEVEL=info

# Sentry for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn

# Enable Prometheus metrics
ENABLE_METRICS=true

# ================================
# FEATURE FLAGS
# ================================
ENABLE_REGISTRATION=true
ENABLE_YOUTUBE_ENTROPY=false
ENABLE_SPECTATOR_MODE=true

# ================================
# DEVELOPMENT ONLY
# ================================
# Set to true in development for detailed debugging
DEBUG=false
